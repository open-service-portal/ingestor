{{!--
  GitOps Parameters Template
  Pure GitOps configuration section for PR-based workflows

  Available variables:
  - xrd: The full XRD object
  - metadata: Extraction metadata
  - config: Configuration with gitops settings
  - helpers: Utility functions
--}}
spec:
  parameters:
    - title: GitOps Configuration
      description: Configure GitOps repository settings for PR-based deployment
      properties:
        gitopsOwner:
          title: GitHub Organization/Owner
          type: string
          description: GitHub organization or user for the GitOps repository
          default: {{config.gitops.owner}}
          ui:help: 'Current default: {{config.gitops.owner}}'
        gitopsRepo:
          title: Repository Name
          type: string
          description: GitOps repository name where manifests will be stored
          default: {{config.gitops.repo}}
          ui:help: 'Current default: {{config.gitops.repo}}'
        gitopsTargetBranch:
          title: Target Branch
          type: string
          description: Target branch for pull requests
          default: {{config.gitops.targetBranch}}
          ui:help: 'Current default: {{config.gitops.targetBranch}}'
